{
    "cmake.buildDirectory": "${workspaceFolder}/build/${variant:buildType}-${variant:staticAnalysis}",
    "cmake.configureOnOpen": true,
    "cmake.configureArgs": [
        "-DBUILD_SHARED_LIBS=ON"
    ],
    "files.associations": {
        "array": "cpp",
        "*.tcc": "cpp",
        "memory": "cpp",
        "istream": "cpp",
        "functional": "cpp",
        "tuple": "cpp",
        "utility": "cpp",
        "ratio": "cpp",
        "valarray": "cpp"
    },
    "editor.formatOnSave": true
}